for_window [app_id="foot"] opacity 0.9

# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {

    output eDP-1
    position top
    height 40
    font pango:JetBrainsMono Nerd Font 18
    status_command while ~/.config/sway/swaybar.sh; do sleep 60; done

    colors {
        statusline #dcd7ba
        background #000000AA
        inactive_workspace #323232AA #323232AA #5c5c5cAA
    }
}
